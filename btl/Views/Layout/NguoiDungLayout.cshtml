                    </li>
                    
                </ul>
            </div>
        </nav>
    </div>
    <!-- menu -->
    <div class="orange">
        <div class="container">
            <nav class="navbar navbar-expand-sm text-danger">
                <ul class="navbar-nav">
                    <li class="nav-item mn">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Trang Chủ</a>
                    </li>
                    <!-- Dropdown -->
                    <li class="nav-item dropdown mn">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
