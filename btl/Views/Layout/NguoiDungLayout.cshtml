                        <input name="txttimkiem" type="text" class="form-control" placeholder="Tìm kiếm sản phẩm...">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">tìm kiếm</button>
                        </div>
                    </div> 
                }
            </div>
            <div class="thanhchon">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link  text-body" href="@Url.Action("Index","ThongBao")"><i class="text-warning fas fa-bell"></i> thông báo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="@Url.Action("DonHang","DonHang")"><i class="text-warning fas fa-bath"></i> đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="@Url.Action("GioHang","Giohang")">
                            <i class="text-warning fas fa-check">
