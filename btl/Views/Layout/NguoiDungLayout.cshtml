<body> 
    @if (@TempData["Message"] != null)
    {
        <script>
            $.notify('@Html.Raw(@TempData["Message"])', {
                style: 'notify',
                className: '@TempData["Type"]',
            });
        </script>
    }
    <div style="position:relative">
        <nav class="navbar navbar-expand-sm justify-content-end logo">
            <div class="anh">
