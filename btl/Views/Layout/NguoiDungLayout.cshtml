                    </li>                 
                    <li class="nav-item mn">
                        <a class="nav-link" href="@Url.Action("GPKT","Home")">Giải pháp kĩ thuật</a>
                    </li>
                    <li class="nav-item mn">
                        <a class="nav-link" href="@Url.Action("Index","TinTuc")">Tin tức và sự kiện</a>
                    </li>
                                                    
                </ul>
            </nav>
        </div>
    </div>

    @RenderBody()


