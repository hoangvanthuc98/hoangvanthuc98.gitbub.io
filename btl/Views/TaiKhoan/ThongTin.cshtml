@using btl.Models
@model NguoiDung
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<style>
    .form-group {
        margin-left: 250px;
    }

    .form-control {
        width: 400px !important;
    }
</style>
<div class="container">
    <div class="form-horizontal">
        <h2 class="text-center">Thông tin cá nhân</h2>
        <div class="form-group row">
            <label for="tendn" class="col-sm-2 col-form-label">Tên đăng nhập</label>
            <div class="col-sm-9">
                <input type="text" readonly class="form-control" value="@Model.TaiKhoan">
            </div>
        </div>
        <div class="form-group row">
            <label for="hoten" class="col-sm-2 col-form-label">Họ và tên</label>
            <div class="col-sm-9">
                <input type="text" readonly class="form-control" value="@Model.Ho  @Model.Ten">
            </div>
        </div>
        <div class="form-group row">
            <label for="sdt" class="col-sm-2 col-form-label">Số điện thoại</label>
            <div class="col-sm-9">
                <input type="text" readonly class="form-control" value="@Model.SDT">
            </div>
        </div>
        <div class="form-group row">
            <label for="que" class="col-sm-2 col-form-label">Địa chỉ</label>
            <div class="col-sm-9">
                <input type="text" readonly class="form-control" value="@Model.DiaChi">
            </div>
        </div>
    </div>
</div>



